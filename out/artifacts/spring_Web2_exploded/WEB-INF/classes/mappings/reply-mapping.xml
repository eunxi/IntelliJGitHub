	<!-- 댓글 작성 -->
	<insert id="replyInsert" parameterType="reply">
		<![CDATA[
			INSERT INTO REPLY
			(
			 b_num,
			 tbl_type,
			 user_id,
			 r_content
			)
			VALUES
			(
			 #{b_num},
			 #{tbl_type},
			 #{user_id},
			 #{r_content}
			)
		]]>
	</insert>

	<!-- 댓글 수정 -->
	<update id="replyUpdate" parameterType="reply">
		<![CDATA[
			UPDATE REPLY SET
			r_content = #{r_content}
			WHERE r_seq = #{r_seq}
		]]>
	</update>

	<!-- 댓글 삭제 -->
	<delete id="replyDelete" parameterType="int">
		DELETE FROM REPLY
		WHERE r_seq = #{r_seq}
	</delete>

	<!-- 댓글 개수 -->
	<select id="replyTotal" resultType="int">
		SELECT
			COUNT(*)
		FROM REPLY
		WHERE b_num = #{b_num}
	</select>



















</mapper>
